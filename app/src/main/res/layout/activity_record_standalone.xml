<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/our_team_list"
        android:listSelector="@drawable/p1_listselector" />

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="8">



        <SurfaceView
            android:layout_width="180dp"
            android:layout_height="110dp"
            android:id="@+id/surface_preview"
            android:layout_gravity="right" />

        <SurfaceView
            android:id="@+id/surface_camera"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="9"
            android:visibility="visible" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_gravity="center_horizontal|bottom">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start"
                android:id="@+id/btn_start"
                android:enabled="false"
                android:clickable="false"
                android:textColor="#0015ff"
                android:contextClickable="false"
                android:longClickable="false"
                android:visibility="invisible" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="シュート"
                android:id="@+id/btn_record"
                android:enabled="true"
                android:clickable="false"
                android:textColor="#ff0000"
                android:visibility="invisible" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ストップ"
                android:id="@+id/btn_every5s" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="プレビュー再生"
                android:id="@+id/btn_play" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="score "
                android:id="@+id/score_label"
                android:layout_gravity="left|top"
                android:textSize="20dp"
                android:background="#ffffff"
                android:textColor="#000000" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/our_score"
                android:textSize="20dp"
                android:background="#ffffff"
                android:textColor="#000000" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" - "
                android:id="@+id/bar"
                android:textSize="20dp"
                android:background="#ffffff"
                android:textColor="#000000" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/enemies_score"
                android:textSize="20dp"
                android:background="#ffffff"
                android:textColor="#000000" />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="time"
            android:id="@+id/game_timer"
            android:layout_gravity="right|top"
            android:textSize="24dp"
            android:background="#ffffff"
            android:textColor="#000000" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/image_layout"
            android:gravity="center_vertical|center_horizontal">

            <ImageView
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:id="@+id/play_and_stop_image"
                android:layout_gravity="center"
                android:gravity=""
                android:visibility="visible"
                android:src="@android:drawable/ic_media_play"
                android:alpha="0"
                android:background="#ff0505" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical|right">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="シュート"
                android:id="@+id/shoot_success"
                android:enabled="true"
                android:clickable="false"
                android:textColor="#0033ff"
                android:layout_gravity="right|center_vertical" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="スティール"
                android:id="@+id/steal"
                android:enabled="true"
                android:clickable="false"
                android:textColor="#0033ff"
                android:layout_gravity="right|center_vertical" />

        </LinearLayout>
        />
    </FrameLayout>

    <ListView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/enemies_team_list"
        android:listSelector="@drawable/p2listselector" />

</LinearLayout>